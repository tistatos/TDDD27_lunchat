<nav class="<%= yield :header_class %>">
  <div class="container">
    <div class="header-logo">
      <%= link_to image_tag('logotype.png', size: "64x40"), activities_path %>
    </div>
    <ul class="header-menu">
      <% if logged_in? %>
        <li class="menu-item">
          <%= image_tag(current_user.image, size: "32x32", class:"user-menu-img") %>
          <%= link_to current_user.first_name, user_path(current_user.id) %>
        </li>
        <li class="menu-item">
          <%= link_to t('activities'), activities_path %>
        </li>
        <li class="menu-item">
          <%= link_to t('restaurants'), restaurants_path %>
        </li>
        <li class="menu-item">
          <%= link_to t('logout'), signout_path, :method => :delete %>
        </li>
      <% else %>
        <li class="menu-item">
          <%= link_to "signin", signin_path %>
        </li>
      <% end %>
    </ul>
  </div>
</nav>

